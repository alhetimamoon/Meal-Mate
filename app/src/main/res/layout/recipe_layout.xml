<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    tools:context=".MainActivity" >

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fragment_recipe">
        <ImageView
            android:id="@+id/recipe_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blueberries"
            android:gravity="center"
            android:textSize="50sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text=" "
            android:textSize="25sp"
            android:background="@android:color/white"
            android:padding="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text=" "
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="CALORIES: 469"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="PROTEIN: 50G"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="2dp"
            android:layout_marginLeft="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/carb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="CARB: 35G"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="2dp"
            android:layout_marginLeft="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/fat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="FAT : 12G"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:padding="2dp"
            android:layout_marginLeft="16dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/ic_heart"
            app:layout_anchor="@id/recipe_header"
            app:layout_anchorGravity="bottom|right|end"/>


    </android.support.design.widget.CoordinatorLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>