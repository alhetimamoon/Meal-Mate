<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recipeThumbnail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pasta" />

        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeThumbnail"
            android:maxLines="1"
            android:padding="8dp"
            android:text="Farfalle with Butternut Squash"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/recipeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeTitle"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Created by Mamoon Braiga"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:padding="8dp"
            android:onClick="onTermConditions"
            android:layout_below="@+id/recipeUser"
            android:clickable="true"
            android:textStyle="bold"
            android:text="VIEW"
            android:textColor="@color/ColorPrimary" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:padding="8dp"
            android:onClick="onTermConditions"
            android:layout_below="@+id/recipeUser"

            android:layout_toRightOf="@+id/view"
            android:clickable="true"
            android:textStyle="bold"
            android:text="SHARE"
            android:textColor="@color/ColorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>